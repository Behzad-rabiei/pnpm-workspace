{
  "name": "pnpm-explore",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "start": "pnpm -r start",
    "build": "pnpm -r build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,yml,yaml,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,yml,yaml,md}\"",
    "lint": "eslint --max-warnings 70 \"**/*.{js,jsx,ts,tsx}\"",
    "changeset": "changeset",
    "start:backend": "pnpm --filter @my/backend dev",
    "start:frontend": "pnpm --filter @my/frontend dev",
    "start:temporal": "pnpm --filter @my/temporal-workflows dev",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@swc/core": "^1.12.7",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.0",
    "unplugin-swc": "^1.5.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4"
}
