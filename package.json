        "@eslint/js": "^9.30.1",
        "@swc/core": "^1.12.7",
        "@vitejs/plugin-react": "^4.5.2",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "commitizen": "^4.3.1",
        "crypto": "^1.0.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.30.1",
        "globals": "^16.3.0",
        "lefthook": "^1.11.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.0",
        "typescript-eslint": "^8.35.1",
        "unplugin-swc": "^1.5.5",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4",
