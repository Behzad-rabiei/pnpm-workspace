{$PULLPREVIEW_PUBLIC_DNS} {
    # Handle API requests
    handle /api/* {
        reverse_proxy api:3000
    }
    
    # Optional: Handle workflows if it has a web interface
    # handle /workflows/* {
    #     reverse_proxy workflows:3001
    # }
    
    # Handle all other requests (UI)
    handle {
        reverse_proxy ui:8080
    }
} 